<% layout('layout') -%>

<div class="container mt-2">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img class='img-circle img-responsive img-center' src="<%= user.profile.picture %>" alt="pic">
      <br />
      <p class='lead'><b>Name:</b> <%= user.profile.name %></p>
      <p class='lead'><b>Email:</b> <%= user.email %></p>

      <% if(user.address === '' || typeof user.address === 'undefined') { %>
        <p class='lead'><b>Address:</b> <span style='color:#c0392b;font-weight:bold'>You have no address</span></p>
      <% } else{ %>
        <p class='lead'><b>Address:</b> <%= user.address %></p>
      <% } %>

      <a href="/edit-profile" class='btn btn-primary btn-lg'>Edit Profile</a>
    </div>
  </div>
</div>
